<h1>Listing engineers</h1>

<table>
  <thead>
    <tr>
      <th>History</th>
      <th>languages</th>
      <th>product1</th>
      <th>product2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @engineers.each do |engineer| %>
      <tr>
        <td><%= engineer.history %></td>
        <td><%= engineer.language_list %></td>
        <td><%= engineer.product1 %></td>
        <td><%= engineer.product2 %></td>
        <td><%= link_to 'Show', engineer %></td>
        <td><%= link_to 'Edit', edit_engineer_path(engineer) %></td>
        <td><%= link_to 'Destroy', engineer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

