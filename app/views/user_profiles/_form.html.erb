<%= form_for(@user, url: {action: :update}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :school %><br>
    <%= f.text_field :school %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :pr %><br>
    <%= f.text_area :pr %>
  </div>
  <div class="field">
    <% if @user.avatar? %>
      <%= image_tag @user.avatar.url, height: 100 %>
    <% end %>
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>
  <div class="field">
    <% if @user.persisted? && @user.avatar %>
      <%= f.check_box :remove_avatar %>
      画像を削除
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
