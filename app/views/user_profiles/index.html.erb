<p class="notice"><%= notice %></p>

<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>school</th>
      <th>age</th>
      <th>pr</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.school %></td>
        <td><%= user.age %></td>
        <td><%= user.pr %></td>
        <td><%= image_tag user.avatar.url %></td>
        <td><%= link_to 'Show', user_profiles_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user) %></td>
        <td><%= link_to 'Destroy', user_profiles_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
